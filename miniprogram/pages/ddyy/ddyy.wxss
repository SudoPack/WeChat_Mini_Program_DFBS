@import "../../style/guide.wxss";



.hpcontainer{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  height:100%;
  width:100%;
  justify-content:space-around;
  align-content: space-between;
}

.searchcontainer{
  padding-top: 20px;
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  height:50px;
  width:100%;
  justify-content:center;
}

.inputview{
  width:70%;
}
.btnview{
  width:10%;
}
.weui-input{
  height:60rpx;
  width:100%;
  border: 1.5px solid #8ec6c5;
  border-radius:8px;
  font-size:30rpx;
}

.btn-search{
  
  vertical-align:middle;
  text-align: center;
  border-radius: 20rpx;
  
}
.img-search{
  
  width:40rpx;
  height:40rpx;
}

.hpitem{
  width:80%;
  display:flex;
  flex-direction:row;
  justify-content:flex-start;
  align-items:center;
  box-sizing:border-box;
  padding-bottom:10px;
  padding-top: 10px;
  border: 2px solid #8ec6c5;
  border-radius:10px;
  margin-top: 10px;
}
.hpimg{
 width:100rpx;
 height:100rpx;
}
.hpview{
  padding-left: 20rpx;
  width:100rpx;
  height:100rpx;
}
.hptxtview{
  display:flex;
  flex-direction:column;
  justify-content:flex-start;
  padding-left: 20rpx;
  font-size: 30rpx;
}

.cityitem{
  padding-left: 75rpx;
  font-size:30rpx;

}

.divLine{
  background: #9ecac9;
  width: 98%;
  height: 1px;
 }

 .txtview{
  padding-top: 10rpx;
  padding-left: 75rpx;
  width:600rpx;
  padding-right: 75rpx;
}

.text{
  text-align:left;
}