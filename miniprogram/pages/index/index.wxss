@import "../../style/guide.wxss";

.hotgoodcontainer{
  display:flex;
  flex-wrap: wrap;
  width:100%;
  padding-top: 50px;
}

.gooditem{
  width:50%;
  display:flex;
  flex-direction:column;
  justify-content:center;
  align-items:center;
  font-size:12px;
  box-sizing:border-box;
  border: 0.5px solid #e2e2e3;
  padding-bottom:50px;
  padding-top: 50px;
}
.productimg{
 width:80px;
 height:80px;
}
.imgview{
width:80px;
height:80px;
}

.menucontainer{
  display:flex;
  flex-direction:row;
  flex-wrap:wrap;
  height:100%;
  width:100%;
  justify-content:space-around;
  align-content: space-between;
}

.menuitem{
  width:40%;
  display:flex;
  flex-direction:column;
  justify-content:space-around;
  align-items:center;
  font-size:20px;
  box-sizing:border-box;
  padding-bottom:20px;
  padding-top: 20px;
  border: 2px solid #8ec6c5;
  border-radius:20px;
  margin-top: 20px;
}
.menuimg{
 width:60px;
 height:60px;
}
.menuview{
width:60px;
height:60px;
}